{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["jest"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.json",
    "./src/**/*.graphql"
  ]
}
